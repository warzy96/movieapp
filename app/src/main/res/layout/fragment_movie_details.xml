<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_background_color"
    android:clickable="true"
    android:fitsSystemWindows="true"
    android:focusable="true">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/common_large_margin_size"
        android:background="@android:color/transparent"
        android:fitsSystemWindows="false"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbarLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:collapsedTitleTextAppearance="@style/CollapsedTitleTextAppearance"
            app:contentScrim="@color/tabBackgroundColor"
            app:expandedTitleMarginStart="30dp"
            app:expandedTitleTextAppearance="@style/ExpandedTitleTextAppearance"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:statusBarScrim="@android:color/transparent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/movie_details_image_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/movie_details_image_height"
                android:contentDescription="@string/movie_details_poster_picture_content_description"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/movie_details_image_overlay_height"
                android:layout_gravity="bottom"
                android:background="@drawable/backdrop_image_overlay"
                android:fitsSystemWindows="true" />

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:fitsSystemWindows="false"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

                <ImageView
                    android:id="@+id/arrowBack"
                    android:layout_width="@dimen/arrow_back_size"
                    android:layout_height="@dimen/arrow_back_size"
                    android:layout_marginStart="@dimen/common_small_margin_size"
                    android:layout_marginEnd="@dimen/common_small_margin_size"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/ic_arrow_back_black_24dp" />
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <fiveagency.internship.food.movieapp.ui.movieslist.CheckableFloatingActionButton
        android:id="@+id/favoriteFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/tabBackgroundColor"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/star"
        app:borderWidth="0dp"
        app:fabSize="auto"
        app:layout_anchor="@id/appBarLayout"
        app:layout_anchorGravity="bottom|end"
        app:layout_behavior="com.google.android.material.floatingactionbutton.FloatingActionButton$Behavior"
        app:useCompatPadding="true" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/default_background_color"
            android:clickable="true"
            android:focusable="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ratingContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/common_small_margin_size"
                android:layout_marginTop="@dimen/common_smallest_margin"
                android:layout_marginEnd="@dimen/common_small_margin_size"
                android:padding="@dimen/common_gutter_size"
                app:layout_constraintBottom_toTopOf="@id/movie_details_overview_text_view"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <View
                    android:id="@+id/rottenTomatoesIcon"
                    android:layout_width="@dimen/rating_icon_size"
                    android:layout_height="@dimen/rating_icon_size"
                    android:background="@drawable/ic_rotten_tomatoes"
                    app:layout_constraintBottom_toTopOf="@id/rottenTomatoesRatingText"
                    app:layout_constraintEnd_toEndOf="@id/rottenTomatoesRatingText"
                    app:layout_constraintStart_toStartOf="@id/rottenTomatoesRatingText"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/rottenTomatoesRatingText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-%"
                    android:textColor="@color/text_dark"
                    android:textSize="@dimen/item_movie_rating_text_size"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/imdbRatingText"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/rottenTomatoesIcon" />

                <View
                    android:id="@+id/leftVerticalLine"
                    android:layout_width="1dp"
                    android:layout_height="0dp"
                    android:background="@color/hintText"
                    app:layout_constraintBottom_toBottomOf="@id/rottenTomatoesRatingText"
                    app:layout_constraintEnd_toStartOf="@id/imdbRatingText"
                    app:layout_constraintStart_toEndOf="@id/rottenTomatoesRatingText"
                    app:layout_constraintTop_toTopOf="@id/rottenTomatoesIcon" />

                <View
                    android:id="@+id/imdbIcon"
                    android:layout_width="@dimen/rating_icon_size"
                    android:layout_height="@dimen/rating_icon_size"
                    android:background="@drawable/ic_imdb_logo"
                    app:layout_constraintBottom_toTopOf="@id/imdbRatingText"
                    app:layout_constraintEnd_toEndOf="@id/imdbRatingText"
                    app:layout_constraintStart_toStartOf="@id/imdbRatingText"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/imdbRatingText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-/10"
                    android:textColor="@color/text_dark"
                    android:textSize="@dimen/item_movie_rating_text_size"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/tmdbRatingText"
                    app:layout_constraintStart_toEndOf="@id/rottenTomatoesRatingText" />

                <View
                    android:id="@+id/rightVerticalLine"
                    android:layout_width="1dp"
                    android:layout_height="0dp"
                    android:background="@color/hintText"
                    app:layout_constraintBottom_toBottomOf="@id/imdbRatingText"
                    app:layout_constraintEnd_toStartOf="@id/tmdbRatingText"
                    app:layout_constraintStart_toEndOf="@id/imdbRatingText"
                    app:layout_constraintTop_toTopOf="@id/imdbIcon" />

                <View
                    android:id="@+id/tmdbRatingIcon"
                    android:layout_width="@dimen/rating_icon_size"
                    android:layout_height="@dimen/rating_icon_size"
                    android:background="@drawable/ic_local_movies_24px"
                    app:layout_constraintBottom_toTopOf="@id/tmdbRatingText"
                    app:layout_constraintEnd_toEndOf="@id/tmdbRatingText"
                    app:layout_constraintStart_toStartOf="@id/tmdbRatingText"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tmdbRatingText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_dark"
                    android:textSize="@dimen/item_movie_rating_text_size"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/imdbRatingText"
                    tools:text="7.3/10" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/movie_details_overview_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/movie_details_overview_margin"
                android:layout_marginTop="@dimen/common_smallest_margin"
                android:layout_marginEnd="@dimen/movie_details_overview_margin"
                android:textColor="@color/text_dark"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ratingContainer" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/castRecyclerView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_smallest_margin"
                android:nestedScrollingEnabled="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/movie_details_overview_text_view" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/movie_details_personal_note_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/movie_details_overview_margin"
                android:background="@drawable/edit_text_background"
                android:hint="@string/add_personal_note_here"
                android:padding="@dimen/edit_text_padding"
                android:textColor="@color/text_dark"
                android:textColorHint="@color/hintText"
                android:textSize="@dimen/comment_text_size"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/youtubePlayer" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/movie_details_submit_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_smallest_margin"
                android:layout_marginBottom="@dimen/common_small_margin_size"
                android:background="@drawable/rounded_button_background"
                android:text="@string/movie_details_submit_button_text"
                android:textColor="@color/text_dark"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/movie_details_personal_note_text_view" />

            <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
                android:id="@+id/youtubePlayer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_smallest_margin"
                app:layout_constraintBottom_toTopOf="@id/movie_details_personal_note_text_view"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/castRecyclerView"
                app:showFullScreenButton="false" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
